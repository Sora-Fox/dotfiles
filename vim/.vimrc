" ~/.vimrc

syntax on
set termguicolors
set background=dark
set number relativenumber
set incsearch
set hlsearch

set expandtab
set tabstop=4
set shiftwidth=4
set smartindent

set viminfo="NONE"
set nobackup
set noswapfile
set encoding=utf-8
set fileencodings=utf8

set belloff=all
set backspace=indent,eol,start
set nowrap
set so=30

inoremap jj <ESC>
